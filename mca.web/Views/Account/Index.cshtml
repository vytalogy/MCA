@model  List<mca.model.User>

@{
    ViewBag.Title = "Users";
    WebGrid WebGrid = new WebGrid(Model, null, null, 10);
}

@section Styles
{
    <style type="text/css">
        .wedgrid-header {
            border: lightgray 1px solid;
            border-radius: 2px;
            background-color: #262425;
            color: #FFFFFF;
            font-weight: bold !important;
        }

        .webgrid-row-style {
            padding: 3px 7px 2px;
        }

        .webgrid-alternating-row {
            background-color: lightgray;
            padding: 3px 7px 2px;
        }

        input[type=text] {
            width: 130px;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
            background-color: white;
            background-image: url('/Images/searchicon.png');
            background-position: 10px 10px;
            background-repeat: no-repeat;
            padding: 12px 20px 12px 40px;
            -webkit-transition: width 0.4s ease-in-out;
            transition: width 0.4s ease-in-out;
        }

            input[type=text]:focus {
                width: 100%;
            }
    </style>
}

<div class="container">
    <div class="row">
        <div class="page-heading">
            <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
            <h1>Users Management</h1>
        </div>
        <div class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Home")">Home</a></li>
                <li class="active"><a href="@Url.Action("Index","Account")">Users</a></li>
            </ol>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="container">
        @if (TempData["alert"].ToString() == "success")
        {
            <div id="errorMessage" class="row alert alert-success alert-dismissable">
                <a href="javascript:;" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Success!</strong> @TempData["msg"]
            </div>
        }
        else if (TempData["alert"].ToString() == "error")
        {
            <div id="errorMessage" class="row alert alert-danger alert-dismissable">
                <a href="javascript:;" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Error!</strong> @TempData["msg"]
            </div>
        }
    </div>
</div>

<div class="container-fluid">
    <div class="container">
        @if (Auth.RoleName == "WebAdmin")
            {
            <div class="row">
                <div class="button pull-left">
                    <a href="@Url.Action("Create", "Account")">Create</a>
                </div>

                <div class="pull-right">
                    <input type="text" name="search" placeholder="Search.." id="txtboxsearch" value="@ViewBag.qurey">
                </div>
            </div>
        }
        <div class="row">
            @if (Model != null && Model.Count() > 0)
            {
                @WebGrid.GetHtml(
             tableStyle: "table table-responsive backcolor",
             headerStyle: "wedgrid-header",
             footerStyle: "webgrid-footer",
             alternatingRowStyle: "webgrid-alternating-row",
             rowStyle: "webgrid-row-style",
             selectedRowStyle: "Grid-selected",
         mode: WebGridPagerModes.All,
         columns:
           WebGrid.Columns
           (
               WebGrid.Column(columnName: "FirstName", header: "First Name", canSort: false),
               WebGrid.Column(columnName: "LastName", header: "Last Name", canSort: false),
               WebGrid.Column(columnName: "Email", header: "Email", canSort: false),
               WebGrid.Column(columnName: "RoleName", header: "Role", canSort: false),
               WebGrid.Column(header: "Active", format:
            @<text>
                @if (item.Active)
                { <span style="color:#235788;" class="glyphicon glyphicon-ok"></span> }
                else
                { <span style="color:#EA3F48;" class="glyphicon glyphicon-remove"></span> }
            </text>),
               WebGrid.Column(header: "Action", format:
            @<text>
                @if (Auth.RoleName == "WebAdmin")
                {
                    <a href='@Url.Action("Edit", "Account", new { id = @item.id })' class="glyphicon glyphicon-pencil"></a>
                    <span>|</span>
                    @*<a href='@Url.Action("Delete", "Account", new { id = @item.id })' class="glyphicon glyphicon-trash"></a>*@
                    <a style="cursor: pointer;" class="remove" data-toggle="modal" data-target="#myModal" data-value="@item.id" role="button">
                        <span class="glyphicon glyphicon-trash" style="color:#2967A9;"></span>
                    </a>

                }
                else
                {@Html.Raw("-") }

            </text>)
                      )
                  );
            }
        </div>
    </div>
</div>

<div class="modal fade in" id="myModal" role="dialog" style="display: none; padding-right: 17px;">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="margin-top: 300px;">
            <div class="modal-header" style="background-color:#F5F5F5;">
                <h6 class="modal-title"><span class="glyphicon glyphicon-warning-sign" style="color:#EA3F48;"></span>&nbsp;&nbsp;<span class="Bold">Warning</span></h6>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this record?</p>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <input type="submit" class="btn btn-danger btn-default" value="YES" id="delete" style="page-break-after:#EA3F48;">
                <input type="button" class="btn btn-default" value="CANCEL" data-dismiss="modal" id="cancel">
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript" language="javascript">
        $(function () {
            setTimeout(function () { $("#errorMessage").hide(); }, 10000);
            $('#myModal').hide();
        });


        $(document).on("keypress", "#txtboxsearch", function (e) {
            if (e.which == 13) {
                window.location.href = "/Account/Index?q=" + $("#txtboxsearch").val();
            }
        });

        $(document).off("click", ".remove");
        $(document).on("click", ".remove", function () {
            var that = $(this);

            value = that.attr('data-value');
        });

        $(document).off("click", "#cancel");
        $(document).on("click", "#cancel", function () {
            $("#delete").attr('data-val', '');
        });

        $(document).off("click", "#delete");
        $(document).on("click", "#delete", function () {
            $('#myModal').modal('hide');
            $.ajax({
                url: "/Account/Delete",
                type: "GET",
                data: { id: value },
                success: function (e) {
                    //alert(e);

                    window.location.href = window.location.href;
                },
                error: function (e) {
                    //alert('error');
                }
            });
            value = '';           
        });

    </script>
}